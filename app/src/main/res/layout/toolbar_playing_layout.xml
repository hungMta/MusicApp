<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/layout_dot"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ic_back"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/txt_song_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="Photograph"
                android:textColor="#FAFAFA" />

            <TextView
                android:id="@+id/txt_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="Ed Sheeran"
                android:textColor="#FAFAFA"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_dot"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="20dp">

        <ImageView
            android:id="@+id/img_dot_one"
            android:src="@drawable/ic_dot_none_active"
            android:layout_width="7dp"
            android:layout_height="7dp" />
        <ImageView
            android:id="@+id/img_dot_two"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_dot_active"
            android:layout_width="7dp"
            android:layout_height="7dp" />
        <ImageView
            android:id="@+id/img_dot_three"
            android:src="@drawable/ic_dot_none_active"
            android:layout_width="7dp"
            android:layout_height="7dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_background"
        android:orientation="horizontal" />
</RelativeLayout>