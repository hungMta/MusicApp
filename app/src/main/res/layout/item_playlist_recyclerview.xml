<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_playlist_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_play_list_header"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_img_add_playlist"
            android:padding="11dp"
            android:src="@drawable/ic_library_music" />

        <TextView
            android:id="@+id/txt_name_playlist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_item_play_list_header"
            android:gravity="center|left"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:maxLines="1"
            android:textColor="@color/black"
            android:paddingRight="20dp"
            android:ellipsize="end"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_total_songs"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_item_play_list_header"
            android:gravity="center|left"
            android:text="1"
            android:textColor="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_total_songs"
            android:gravity="center|left"
            android:text="song"
            android:textColor="@color/gray" />
    </RelativeLayout>
</LinearLayout>